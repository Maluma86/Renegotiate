<div class="product-page-container">

  <!-- Sticky header: static page title -->
  <div class="wrapper-that-freezes-things">
    <div class="products-header">
      <div class="page-title">
        <span class="page-title__text">Renegotiate</span>
      </div>
    </div>
  </div>

  <!-- Detail card -->
  <div class="card-wrapper">
    <div class="card-pro">

      <!-- ───────────────────────────────────────────────────────────
           ① Card header now includes product, supplier, and status
           ─────────────────────────────────────────────────────────── -->
      <div class="card-pro__header">
        <h2>Product: <%= @product.name %></h2>
        <% if (s = @product.supplier) %>
          <h2>Supplier: <%= s.company_name %></h2>
        <% end %>
        <% latest = @product.renegotiations.order(created_at: :desc).first
           status = latest&.status.present? ? latest.status.downcase.tr(' ', '_') : "pending" %>
        <span class="status <%= status %>">
          <%= status.titleize %>
        </span>
      </div>

      <hr>

      <!-- ───────────────────────────────────────────────────────────
           ② Two-column body (unchanged)
           ─────────────────────────────────────────────────────────── -->
      <div class="card-pro__body">
        <!-- Left column -->
        <div class="card-pro__section">
          <% if s&.contact_email.present? %>
            <p>
              <strong>Email:</strong>
              <%= mail_to s.contact_email,
                        s.contact_email,
                        class: "product-email-link" %>
            </p>
          <% end %>
          <p>
            <strong>Description:</strong><br>
            <%= @product.description.presence || "No description available." %>
          </p>
        </div>

        <!-- Right column -->
        <div class="card-pro__section">
          <p><strong>Current Price:</strong> <%= number_to_currency(@product.current_price) %></p>
          <p><strong>Ends:</strong>          <%= l(@product.contract_end_date) %></p>
          <p><strong>Last 30 days:</strong>   <%= @product.last_month_volume %> units</p>
          <p><strong>Last 12 months:</strong> <%= @product.last_year_volume  %> units</p>
        </div>
      </div>

      <!-- ───────────────────────────────────────────────────────────
           ③ Actions row (unchanged)
           ─────────────────────────────────────────────────────────── -->
      <div class="card-pro__actions">
        <%= link_to "Renegotiate",
                    new_product_renegotiation_path(@product),
                    class: "import-btn" %>
      </div>
    </div>
  </div>

  <!-- Back to results (unchanged) -->
  <div class="text-center" style="margin-top: 1.5rem;">
    <%= link_to "← Back to results",
                products_path,
                class: "import-btn" %>
  </div>
</div>
