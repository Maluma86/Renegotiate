<div class="insights-page-container container">
  <header class="insights-header">
    <%= render "shared/product_title", title_text: "Insights" %>

    <div class="timeframe-select">
      <%= form_with url: insights_path, method: :get, local: true do %>
        <%= select_tag :period,
              options_for_select(
                [['Last 7 days','7'], ['Last 30 days','30'], ['Last 90 days','90'], ['All time','all']],
                params[:period] || '7'
              ),
              onchange: 'this.form.submit()'
        %>
      <% end %>
    </div>
  </header>

  <div class="insights-cards-wrapper">
    <%= render partial: 'insights_cards', locals: { stats: @stats } %>
  </div>
</div>
