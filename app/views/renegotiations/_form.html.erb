<%= simple_form_for [@renegotiation, question],
      html: {
        data: {
          turbo:      true,
          controller: "reset-form",
          action:     "turbo:submit-end->reset-form#reset"
        }
      } do |f| %>

  <div class="input-group mb-3 w-100">
    <div class="form-floating">
      <%= f.input :user_question,
            label: false,
            wrapper: false,
            input_html: {
              class: "form-control bg-white",
              rows: 2,
              placeholder: "Chat with our negotiatorâ€¦",
              "data-reset-form-target": "input"
            } %>
      <%= f.label :user_question, "Chat with our negotiator:" %>
    </div>
    <%= f.button :submit, "Send", class: "btn btn-primary" %>
  </div>

<% end %>
