                  # Determine trend color and arrow
                  if ingredient[:price_trend] > 0
                    trend_color = ingredient[:price_trend] > 10 ? '#EF4444' : '#FBBF24'
                    trend_arrow = '‚Üë'
                    trend_sign = '+'
